<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminPanel"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/bt_addEmp"
            style="@style/textView"
            android:text="Add Employee"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"/>

        <LinearLayout
            android:id="@+id/ll_addEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_empName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Name" />


            <EditText
                android:id="@+id/et_empDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Department" />


            <EditText
                android:id="@+id/et_empLoginID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Login ID" />


            <EditText
                android:id="@+id/et_empPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Password" />


            <Button
                android:id="@+id/idBtnAddCourse"
                style="@style/button"
                android:text="Employee details added"/>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/idBtnReadCourse"
            style="@style/button"
            android:layout_weight="1"
            android:text="View Employees"/>

        <Space
            android:layout_width="24dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/idBtnReadAttendance"
            style="@style/button"
            android:layout_weight="1"
            android:text="View Attendance"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/idBtnReadBreakTime"
            style="@style/button"
            android:layout_weight="1"
            android:text="View Breaktime"/>
    </LinearLayout>

</LinearLayout>